{% extends "layout.njk" %}

{% block head %}

<title>Cursos</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

        <div id="wrapper">
            <h1>Conteúdo</h1>
        </div>

        <section class="cards">

            <div class="card" id="starter">
                <div class="card__image-container">
                    <img src="../images/Starter.64c237cc.svg" alt="Curso Starter">
                </div>

                <div class="card__content">
                    <p>Starter</p>
                </div>

                <div class="card__info">
                    <p>5 módulos</p>
                    <p class="card__price">Free</p>
                </div>
            </div>

            <div class="card" id="launchbase">
                <div class="card__image-container">
                    <img src="images/LaunchBase.08285320.svg" alt="Curso LaunchBase">
                </div>

                <div class="card__content">
                    <p>LaunchBase</p>
                </div>

                <div class="card__info">
                    <p>16 módulos</p>
                    <p class="card__price">Paid</p>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card__image-container">
                    <img src="images/GoStack.83a178a0.svg" alt="Curso GoStack">
                </div>

                <div class="card__content">
                    <p>GoStack</p>
                </div>

                <div class="card__info">
                    <p>20 módulos</p>
                    <p class="card__price">Paid</p>
                </div>
            </div>

        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>


    </header>


<script src="scripts.js"></script>

{% endblock %}