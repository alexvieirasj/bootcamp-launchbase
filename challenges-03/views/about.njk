{% extends "layout.njk" %}

      
{% block head %}
<title>Sobre</title>
{% endblock %}


{% block content %}  

        <div id="wrapper">
            <img src="{{ about.image }}" alt="{{ about.name }}">
            <h1>{{ about.name }}</h1>
            <p>{{ about.description }}</p>
            <ul>
                {% for technology in about.technologies%}
                    <li>{{ technology.name }}</li>
                {% endfor %}
            </ul>
        </div>

        <div id="links-footer" class="links">

            {% for link in about.links%}
                <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
            {% endfor %}
        </div>
        
{% endblock %}  